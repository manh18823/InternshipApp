<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Student Illustration -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/student_illustration"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tvWelcomeStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Student"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#222222"
        android:layout_marginBottom="32dp" />

    <!-- View Internships Button -->
    <LinearLayout
        android:id="@+id/customButtonViewInternships"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/rounded_button_primary"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_search"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/btnViewInternships"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Internships"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- View History Button -->
    <LinearLayout
        android:id="@+id/customButtonViewHistory"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/rounded_button_primary"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_history"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/btnViewHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View History"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Logout Button -->
    <LinearLayout
        android:id="@+id/customButtonLogout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button_danger">>

        <ImageView
            android:id="@+id/btnLogoutIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_logout"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/btnLogoutStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
